<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.USEAAPP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="windowNoTitle">true</item>-->
<!--        <item name="windowActionBar">false</item>-->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="setDisplayHomeAsUpEnable_profile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_close_24</item>
    </style>

    //set icon back on action bar

    <style name="setBackButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="homeAsUpIndicator">@drawable/back_icon</item>
    </style>

    //set text size on toolbar
    <style name="setTextSizeActionbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/khmer_os_battambang_bold</item>
    </style>

    //set font family on navigation bar
    <style name="BottomNavigationViewStyle">
        <item name="itemIconTint">@color/dark_blue</item>
        <item name="itemTextColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/khmer_os_battambang_regular</item>
    </style>

    //set text Size on Tab bar
    <style name="TabTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/khmer_os_battambang_regular</item>
    </style>

    //customize actionbar
<!--    <style name="Actionbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">-->
<!--        <item name="actionBarStyle">@color/black</item>-->
<!--    </style>-->
</resources>