<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".guest.guest_more.FragmentGuestMore">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/qa_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:gravity="center"
                    android:text="@string/FAQ"
                    android:textColor="@color/black" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/go_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/about_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:text="@string/About_Us"
                    android:textColor="@color/black" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/go_icon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="50dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/khmer_os_battambang_regular"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:text="@string/Follow_Us" />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_fb"
                        android:layout_width="0dp"
                        android:background="@null"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/facebook_icon" />

                    <ImageButton
                        android:id="@+id/btn_ig"
                        android:layout_width="0dp"
                        android:background="@null"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/instagram_icon" />

                    <ImageButton
                        android:id="@+id/btn_yt"
                        android:layout_width="0dp"
                        android:background="@null"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/youtube_icon" />

                    <ImageButton
                        android:id="@+id/btn_tele"
                        android:layout_width="0dp"
                        android:background="@null"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/telegram_icon" />

                    <ImageButton
                        android:id="@+id/btn_web"
                        android:layout_width="0dp"
                        android:background="@null"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/browser_icon" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:gravity="center">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/location_icon"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/khmer_os_battambang_regular"
                   android:textColor="@color/black"
                   android:text="@string/Location" />
           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
             <com.google.android.material.card.MaterialCardView
                 android:layout_width="match_parent"
                 android:layout_height="80dp"
                 android:layout_margin="2dp">
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:padding="15dp">
                     <TextView
                         android:id="@+id/txt_location_txt"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="2"
                         android:gravity="center|left"
                         android:text="@string/Location_usea"
                         android:fontFamily="@font/khmer_os_battambang_regular"
                         android:textColor="@color/black"/>
                     <ImageButton
                         android:id="@+id/img_location"
                         android:layout_width="0dp"
                         android:background="@null"
                         android:layout_height="match_parent"
                         android:layout_weight="1"
                         android:src="@drawable/location_img"/>
                 </LinearLayout>
             </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>