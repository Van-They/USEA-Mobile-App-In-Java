<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".STUDENT.Schedule.StudentSchedule">

    <include
        android:id="@+id/CustomActionbarStudentSchedule"
        layout="@layout/custom_actionbar" />

    <CalendarView
        android:id="@+id/Student_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/khmer_os_battambang_regular"
        android:text="វគ្គសិក្សា"
        android:textColor="@color/black" />

    <ListView
        android:id="@+id/Listview_student_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:listSelector="#00000000" />
</LinearLayout>