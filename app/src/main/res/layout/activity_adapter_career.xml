<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/Title_guest_career_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:text="@string/Sample_txt"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="-10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Detail_guest_career_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:text="@string/Sample_txt"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_25" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="5dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_location" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/Province_guest_career_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Sample_txt"
                                android:fontFamily="@font/khmer_os_battambang_regular"
                                android:textSize="12sp"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/khmer_os_battambang_regular"
                                android:text="@string/Location"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="5dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_calendar" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/Month_guest_career_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="1dp"
                                android:paddingStart="1dp"
                                android:text="@string/Sample_txt"
                                android:fontFamily="@font/khmer_os_battambang_regular"
                                android:textSize="12sp"

                                />

                                <TextView
                                    android:id="@+id/Date_guest_career_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingEnd="1dp"
                                    android:paddingStart="1dp"
                                    android:fontFamily="@font/khmer_os_battambang_regular"
                                    android:text="@string/Sample_txt"
                                    android:textSize="12sp"

                                    />
                            <TextView
                                android:id="@+id/Year_guest_career_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="1dp"
                                android:paddingStart="1dp"
                                android:text="@string/Sample_txt"
                                android:fontFamily="@font/khmer_os_battambang_regular"
                                android:textSize="12sp"
                                />
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/khmer_os_battambang_regular"
                                android:text="@string/Due_guest_Date"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:gravity="center|right">

                        <TextView
                            android:id="@+id/View_guest_career_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/khmer_os_battambang_regular"
                            android:text="@string/ShowDetail"
                            android:textColor="@color/dark_blue"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go_icon"
                            />

                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/Label_guest_career"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="@string/Sample_txt"
                    android:visibility="gone"
                    />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>