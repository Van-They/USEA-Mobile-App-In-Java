<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".guest.guest_more.Detail_guest_about_us_more">
    <include
        android:id="@+id/CustomActionbarGuestAboutUsDetail"
        layout="@layout/custom_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/usea_logo"/>
        <TextView
            android:id="@+id/usea_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/khmer_os_battambang_regular"
            android:textStyle="bold"
            android:text="@string/school_name_kh"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/School_detail_scholarship_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Lorem"
            android:textColor="@color/black" />

    </LinearLayout>
</LinearLayout>