<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp">
                    <TextView
                        android:id="@+id/Label_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/Label_assignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/yellow_40"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/Assignment"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/Label_homework"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_sky_40"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/Homework"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/Label_midterm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/pink_40"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/Midterm"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/Subject_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/khmer_os_battambang_bold"
                    android:text="@string/Subject"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/LayoutDueDate"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Due_Date"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/Due_date_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Sample_txt"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/LayoutDate"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Exam_date"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/Exam_date_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Sample_txt"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/LayoutRoom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Room"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/Room_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Sample_txt"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/LayoutTime"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/hournews"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/Time_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Sample_txt"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/LayoutCreator"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Create_By"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/Creator_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Sample_txt"
                        android:textSize="14sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/instruction"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|top">

                <ImageView
                    android:id="@+id/image_assignment_news"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/image_notifacation" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>