<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp">
                    <TextView
                        android:id="@+id/labelnews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/labelassignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@color/yellow_40"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/Assignment"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/labelhomework"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_sky_40"
                        android:visibility="gone"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/Assignment"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/labelmidterm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/pink_40"
                        android:visibility="gone"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/Assignment"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/subject_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/khmer_os_battambang_bold"
                    android:text="@string/Subject"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelduedate"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Due_Date"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/duedatenews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Sample_txt"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:id="@+id/lablexamdate"
                        android:text="@string/Exam_date"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/examdatenews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Sample_txt"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelroom"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Room"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/roomnews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Sample_txt"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labeltime"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/hournews"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/timenews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Sample_txt"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelcreator"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Create_By"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/creatornews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khmer_os_battambang_regular"
                        android:text="@string/Sample_txt"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|top">

                <ImageView
                    android:id="@+id/image_assignment_news"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/image_notifacation" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>