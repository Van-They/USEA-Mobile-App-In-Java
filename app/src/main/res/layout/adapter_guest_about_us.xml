<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/Guest_about_us_usea_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/usea_logo"/>
        <TextView
            android:id="@+id/Guest_about_us_usea_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/khmer_os_battambang_regular"
            android:textStyle="bold"
            android:text="@string/school_name_kh"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Guest_about_us_usea_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Lorem"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>