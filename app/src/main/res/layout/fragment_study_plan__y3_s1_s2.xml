<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.student_studyplan.year3.FragmentStudyPlan_Y3S1S2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/blue_sky_40"
            android:fontFamily="@font/khmer_os_battambang_regular"
            android:gravity="center"
            android:text="@string/Semester1"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/pink_40"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/khmer_os_battambang_regular"
                android:gravity="center"
                android:text="@string/Subject"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/khmer_os_battambang_regular"
                android:gravity="center"
                android:text="@string/Hour"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/khmer_os_battambang_regular"
                android:gravity="center"
                android:text="@string/Credit"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:id="@+id/student_study_plan_list_y3s1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:scrollbars="none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/student_study_plan_total_y3s1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/khmer_os_battambang_regular"
                android:gravity="center"
                android:text="@string/Total"
                android:textColor="@color/dark_blue" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/student_study_plan_total_hour_y3s1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/khmer_os_battambang_regular"
                android:gravity="center"
                android:text="@string/Hour"
                android:textColor="@color/dark_blue" />

            <TextView
                android:id="@+id/student_study_plan_total_credit_y3s1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/khmer_os_battambang_regular"
                android:gravity="center"
                android:text="@string/Credit"
                android:textColor="@color/dark_blue" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/blue_sky_40"
            android:fontFamily="@font/khmer_os_battambang_regular"
            android:gravity="center"
            android:text="@string/Semester2"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/pink_40"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/khmer_os_battambang_regular"
                android:gravity="center"
                android:text="@string/Subject"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/khmer_os_battambang_regular"
                android:gravity="center"
                android:text="@string/Hour"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/khmer_os_battambang_regular"
                android:gravity="center"
                android:text="@string/Credit"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:id="@+id/student_study_plan_list_y3s2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:scrollbars="none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/student_study_plan_total_y3s2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/khmer_os_battambang_regular"
                android:gravity="center"
                android:text="@string/Total"
                android:textColor="@color/dark_blue" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/student_study_plan_total_hour_y3s2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/khmer_os_battambang_regular"
                android:gravity="center"
                android:text="@string/Hour"
                android:textColor="@color/dark_blue" />

            <TextView
                android:id="@+id/student_study_plan_total_credit_y3s2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/khmer_os_battambang_regular"
                android:gravity="center"
                android:text="@string/Credit"
                android:textColor="@color/dark_blue" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>