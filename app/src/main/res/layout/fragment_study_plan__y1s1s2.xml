<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".STUDENT.StudyPlan.year1.Fragment_student_Studyplan_y1s1s2">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <include layout="@layout/custom_header_list_study_plan_semester1" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/student_study_plan_list_s1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:scrollbars="none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/student_study_plan_total_s1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:gravity="center"
                    android:text="@string/Total"
                    android:textColor="@color/dark_blue" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/student_study_plan_total_hour_s1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:gravity="center"
                    android:text="@string/Hour"
                    android:textColor="@color/dark_blue" />

                <TextView
                    android:id="@+id/student_study_plan_total_credit_s1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:gravity="center"
                    android:text="@string/Credit"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>

            <include layout="@layout/custom_header_list_study_plan_semester2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/student_study_plan_list_s2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:scrollbars="none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/student_study_plan_total_s2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:gravity="center"
                    android:text="@string/Total"
                    android:textColor="@color/dark_blue" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/student_study_plan_total_hour_s2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:gravity="center"
                    android:text="@string/Hour"
                    android:textColor="@color/dark_blue" />

                <TextView
                    android:id="@+id/student_study_plan_total_credit_s2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:gravity="center"
                    android:text="@string/Credit"
                    android:textColor="@color/dark_blue" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>