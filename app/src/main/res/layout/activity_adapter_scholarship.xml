<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/Subject_guest_scholarship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:text="Sample_txt"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:text="@string/Double_dot"
                    android:textColor="@color/black"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/University_guest_scholarship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:text="Sample_txt"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="@null"
                    android:src="@drawable/degree" />
                <TextView
                    android:id="@+id/Degree_guest_scholarship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample_txt"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="@null"
                    android:src="@drawable/fee_scholarship" />
                <TextView
                    android:id="@+id/Fee_guest_scholarship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample_txt"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/Date_guest_scholarship"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:text="Date"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/Month_guest_scholarship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Month"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/Year_guest_scholarship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:fontFamily="@font/khmer_os_battambang_regular"
                    android:textColor="@color/black" />
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/ReadMore_guest_scholarship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:cornerRadius="10dp"
                android:fontFamily="@font/khmer_os_battambang_regular"
                android:text="@string/Read_More"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>